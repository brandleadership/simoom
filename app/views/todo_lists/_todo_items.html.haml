- @todo_lists.each do |t|
  .todo-item
    = t.name
    = simple_form_for :week_todo_list, :url => weeks_todo_lists_path, :remote => true do |f|
      = f.input :week_id, :as => :hidden, :input_html => { :value => params[:week_id] }
      = f.input :todo_list_id, :as => :hidden, :input_html => { :value => t.id }
      = f.submit