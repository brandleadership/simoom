source 'http://rubygems.org'

gem 'rails', '3.1.0.rc6'
gem 'sqlite3'
gem 'mysql2'
gem 'haml-rails'

gem 'compass', :git => 'git://github.com/chriseppstein/compass.git', :branch => 'rails31'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "~> 3.1.0.rc"
  gem 'coffee-rails', "~> 3.1.0.rc"
  gem 'uglifier'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'ruby-debug'
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'growl'
  gem 'capybara'
  gem 'rb-fsevent'
  gem 'growl'
  gem 'vcr'
  gem 'fakeweb'
  gem 'database_cleaner'

  # Deployment gems
  gem 'capistrano'
  gem 'capistrano-ext'
  gem 'capistrano_colors'
end
