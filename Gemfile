source 'http://rubygems.org'

gem 'rails'
gem 'sqlite3'
gem 'mysql2'
gem 'haml-rails'
gem 'simple_form'

gem 'compass', '0.12.alpha.0'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'factory_girl_rails', :require => false
  gem 'ruby-debug'
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'growl'
  gem 'capybara'
  gem 'rb-fsevent'
  gem 'growl'
  gem 'vcr'
  gem 'fakeweb'
  gem 'database_cleaner'

  # Deployment gems
  gem 'capistrano'
  gem 'capistrano-ext'
  gem 'capistrano_colors'
end
